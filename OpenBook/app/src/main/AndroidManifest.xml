        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenBook"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".loginAndRegister.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".loginAndRegister.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".manager.ManagerMainActivity"
            android:exported="false" />

        <activity
            android:name=".user.UserMainActivity"
            android:exported="false" />

        <activity
            android:name=".BookDetailActivity"
            android:exported="false" />


        <activity
            android:name=".user.UserCurrentLoanActivity"
            android:exported="false" />

        <activity
            android:name=".user.UserReviewWriteActivity"
            android:exported="false" />

        <activity
            android:name=".user.UserTopReadersActivity"
            android:exported="false" />


        <activity
            android:name=".manager.ManagerOverdueUserListActivity"
            android:exported="false" />


    </application>
</manifest>